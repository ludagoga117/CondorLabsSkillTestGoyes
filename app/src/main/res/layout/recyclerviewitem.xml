<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recyclerview_item_height"
    android:paddingVertical="@dimen/recyclerview_item_padding_vertical"
    android:paddingHorizontal="@dimen/recyclerview_item_padding_horizontal"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/recyclerview_item_imageview"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent"
        android:src="@drawable/ic_broken_image_black_24dp"
        android:tint="@color/divider_color"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="0.04"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.64"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="@string/activitydetail_movietitle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_short"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/recyclerview_item_voteaverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="@string/activitydetail_voteaverage"/>

    </LinearLayout>

</LinearLayout>